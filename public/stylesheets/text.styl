*
  box-sizing: border-box
  
body
  background: radial-gradient( #ffdb78, #fac018 );
  color: #222
  font-family: 'Open Sans', sans-serif
  margin: 0
  line-height: 1
  font-size: 10px

h1
h2
h3
h4
  font-weight: normal
  font-size: 1.5em
  line-height: 1.3
  color: #000
  margin: 0
  padding: 0

p
  margin: 0
  padding: 0

a
  text-decoration: underline
  color: darken( #fac018, 40 )

  &:hover
  &:focus
    outline: none
    color: darken( #fac018, 80 )

button
  margin: 0 1em 0 0
  color: darken( rgba( #fac018, 0.6 ), 40 )
  cursor: pointer
  font-size: 8px
  text-transform: uppercase
  padding: 0.5em 1em
  background: rgba( #fff, .3 )
  border: solid #f9bc0d
  border-width: 0 0 1px 0
  
  &.active
    color: #000
    background: rgba( #fff, .5 )

  &:focus
    outline: none
  
  &:hover
    background: rgba( #fff, .5 )

::-webkit-scrollbar
  width: 5px
  height: 5px
 
::-webkit-scrollbar-track 
  -webkit-box-shadow: inset 0 0 6px rgba( 0,0,0,0.1 )
 
::-webkit-scrollbar-thumb
  border-radius: 5px;
  box-shadow: inset 0 0 6px rgba( 0,0,0,0.2 )