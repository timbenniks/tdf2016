.about
  .about-content
    padding 1em

    article
      padding: 1em
      background: rgba( #fff, .3 )
      border-bottom: 1px solid #f9bc0d
      width: 100%
      margin: 0 auto 1em
      font-size: 1em
      max-width: 700px
    
      h1
      h2
        margin: 0 0 1em 0
        text-transform: uppercase
        opacity: 0.6
      
      p
      ul
        line-height: 1.8
        margin: 0 0 2em 0
        
        &:last-child
          margin: 0
                   
      ul
        padding: 0 0 0 1.5em
      
      table
        font-size: .8em
        border-collapse: collapse
        width: 100%
        
        tr
          background: rgba( #fff, .3 )
          border-bottom: 1px solid #f9bc0d
          
        th
          opacity: 0.6

        td
        th
          padding: 0.7em 1em
          text-align: left