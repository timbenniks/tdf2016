.about
  .about-content
    padding 1em

    article
      padding: 1em
      background: rgba( #fff, .3 )
      border-bottom: 1px solid #f9bc0d
      width: 100%
      margin: 0 auto 1em
      font-size: 1em
      max-width: 700px
      
      @media screen and ( min-width: 600px )
        column-count: 2
        column-gap: 4em
     
      h1
      h2
        margin: 0 0 1em 0
        text-transform: uppercase
        opacity: 0.6
      
      p
      ul
        line-height: 1.8
        margin: 0 0 2em 0
        
        &:last-child
          margin: 0
                   
      ul
        padding: 0 0 0 1.5em
      
        