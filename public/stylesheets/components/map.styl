.map
  
  .map-banner
    height: 3em
    background: #000

  #map
  #map-window-holder
    position: absolute
    top: 75px
    left: 0
    height: calc( 100% - 75px )
    width: 100%
    
    @media screen and ( min-width: 600px )
      height: calc( 100% - 60px )
      top: 60px
    
  #map-window-holder
    display: none
    width: 100%
    left: auto
    right: 0
    background: rgba( #fff, 0.9 )
    border: none
    overflow: auto
    background: lighten( #f9bc0d, 35 )
    font-size: 1em

    &.active
      display: block
          
    .close-window
      position: absolute
      right: 1em
      top 1em
      margin: 0
      
    .map-window
      margin: 1em
      
      h1
        text-transform: uppercase
        color: rgba( #000, 0.6 )
        margin: 0 0 1em 0
        font-size: 1.2
        
    .stats
    .times
    .riders
      background: rgba( #fff, 0.4 )
      border-bottom: 1px solid #f9bc0d
      padding: 1em
      margin: 0 0 1em 0
      overflow: hidden
      list-style: none
      
      .stat-wrapper
      .time-wrapper
        width: 50%
        float: left
        margin: 0 0 1.5em 0
        
        &:nth-child( 3 )
        &:last-child
          margin: 0
        
        .title
          display: block
          text-transform: uppercase
          font-size: 0.8em
          color: rgba( #000, 0.6 );
          margin: 0 0 0.2em 0
        
        .content
          display: block
          font-size: 2.5em
      
      li
        background: rgba( #fff, 0.4 )
        border-bottom: 1px solid #f9bc0d
        padding: 0
        margin: 0 0 .5em 0
        overflow: hidden
        
        img
          display: block
          margin: 0 .5em 0 0
          width: 4em
          height: 4em
          float: left
          
        .name
          display: block
          text-transform: uppercase
          margin: 6px 0 0 0
          
          .flag
            margin: 0 4px 0 0
            position: relative
            top: 1px
        
        .team
          display: block
          font-size: 0.9em
          color: rgba( #000, 0.6 )
          margin: 5px 0 0 0
            
    @media screen and ( min-width: 800px )
      background: rgba( lighten( #f9bc0d, 35 ), 0.9 )
      border-left: 1px solid #f9bc0d
      width: 300px
      
    @media screen and ( min-width: 1300px )
      width: 500px

