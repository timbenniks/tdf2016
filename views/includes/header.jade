header
  img.logo( src="/images/logo.svg" )
  
  h1
    if info.distance > 0 
      span.chapeau #{info.date} &ndash; #{info.distance}km
      span.title #{info.start} &ndash; #{info.finish}
    else
      span.chapeau #{info.date} &ndash; rest day
      span.title #{info.start}

  .options
    button.fullscreen Fullscreen
    button.notifications Notifications